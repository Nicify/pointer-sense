{
    "root": true,
    "extends": ["with-tsconfig"],
    "rules": {
        "new-cap": "off"
    },
    "overrides": [
        {
            "files": ["scripts/**/*.ts", "vite.config.ts"],
            "parserOptions": {
                "project": "tsconfig.node.json"
            }
        },
        {
            "files": ["src/i18n/i18n-*.@(ts|tsx)"],
            "rules": {
                "unicorn/no-abusive-eslint-disable": "off"
            }
        }
    ]
}
