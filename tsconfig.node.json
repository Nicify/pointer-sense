{
  "extends": "eslint-config-with-tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@types/node"],
    "noEmit": true
  },
  "include": ["scripts/**/*.ts", ".eslintrc.cjs", "*.config.js", "*.config.ts"]
}
